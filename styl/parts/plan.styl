.title_wrapper
    overflow: hidden
    position relative
    width 100%
    padding: 35px 0
    background-image: linear-gradient(80deg, #4960af 0%, #48c6ef 50%, #48c6ef 80%, #4960af 130%)
    box-shadow: 0px 5px 11px 0px rgba(0, 0, 0, 0.15);
    &:before
    &:after
        content: ''
        position: absolute
        background-color: transparent
        border-top: 3px dotted #504d82
        opacity: 1
        width: 100%
        height: auto
        left 0
        right 0
    &:before
        top 7px
    &:after
        bottom: 7px
    h3:after
        background-color #fff

#plan_container
    width: 100%
    padding: 148px 0 110px
    background-image url(../img/plan_bg.jpg)
    background-repeat no-repeat
    background-position: center
    background-size cover

.day_container
    border-radius: 5px;
    box-shadow: 0px 0px 15.3px 1.7px rgba(0, 0, 0, 0.6);
    width: 555px;
    height: 511px;
    padding: 103px 25px 0 25px
    position relative
    .day_number
        width: 141px
        height 141px
        line-height: 1
        border-radius: 50%
        background-position center
        background-repeat no-repeat
        font-size: 30px;
        font-family: "HelveticaNeueCyrBold", sans-serif;
        text-align: center; 
        position: absolute
        top: -70px
        left 0
        right 0
        margin  0 auto
        padding-top: 30px
.plan_list
    margin-left: 20px;
    li
        font-size: 20px;
        font-family: "HelveticaNeueCyrRoman", sans-serif;
        color: #35b2c4
        line-height: 1.45;
        margin-bottom: 17px;

.day_bonus
    font-size: 20px;
    font-family: "HelveticaNeueCyrBold", sans-serif;
    color: rgb(53, 178, 196);
    line-height: 1.55;

.day_container_first
    background-color: rgb(13, 24, 41);
    .day_number
        background-color: #f8fbfd
        background-image url(../img/day_1.png)
        color: rgb(13, 24, 41);
    .plan_list
        li
